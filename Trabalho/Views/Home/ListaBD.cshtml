@{
    ViewData["Title"] = "Home Page";
}
@model List<CurriculoViewModel>

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Prototipo</title>
    <link rel="stylesheet" type="text/css" href="~/css/prototipo.css" media="screen" />
    <link rel="stylesheet" type="text/css" href="~/css/sweetalert.css" media="screen" />
</head>

<body>
    <header>
        <nav id="nav-menu">
            <div id="site-name">
                CURRICULUM
                <span>
                    <div class="menu-right">
                        <a asp-area="" asp-controller="Home" asp-action="Index" id="sub-menu">Menu Inicial</a>
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <a asp-area="" asp-controller="Home" asp-action="Sobre">Sobre</a>
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <a href=" # ">Ajuda</a>
                    </div>
                </span>
            </div>
        </nav>
    </header>

    <div id="background" class="col-12">
        <table id="listagem" class="table  table-striped table-info">
            <thead>
                <tr>
                    <th style="width:25px"></th>
                    <th style="width:20px">Ações</th>
                    <th style="width:20px"></th>
                    <th>CPF</th>
                    <th>Nome</th>
                    <th>Rua</th>
                    <th>CEP</th>
                </tr>
            </thead>
            @foreach (CurriculoViewModel a in Model)
            {
                <tbody>
                <td style="width:30px"><a href="~/Cadastro/Edita1?id=@a.cpf">Alterar</a> </td>
                <td style="width:20px"><a href="~/Home/ExibirCurriculo?id=@a.cpf">Ver</a></td>
                <td style="width:20px"><a href= "javascript:apagarCurriculo(@a.cpf)">Excluir</a></td>
                <td>@a.cpf</td>
                <td>@a.nome</td>
                <td>@a.rua</td>
                <td>@a.cep</td>
                </tbody>
            }
        </table>
    </div>

    <div id="rodapé"></div>
</body>

</html>
